source ~/.config/nvim/after/plugin/basics.vim

let mapleader = " "

" Default indentation
set expandtab
set tabstop=4
set softtabstop=4
set shiftwidth=4

set incsearch

set ideajoin
set ideastatusicon=gray
set idearefactormode=keep

nnoremap gd :action GotoDeclaration<cr>
nnoremap gD :action GotoImplementation<cr>
nnoremap <leader>sf :action GotoFile<cr>
nnoremap <leader>sr :action RecentFiles<cr>
nnoremap <leader>sw :action FindInPath<cr>
nnoremap <leader>vrn :action RenameElement<cr>
nnoremap <leader>* :action ShowUsages<cr>

nnoremap <leader>y "+y
nnoremap <leader>Y 0"+y$
vnoremap <leader>y "+y
nnoremap <C-p> "+p
vnoremap <C-p> "+p

